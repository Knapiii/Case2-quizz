<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="case2.iths.com.QuizGame">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_brain_square"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_brain_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
        <activity
            android:name=".HighScoreActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".HandleStatementsActivity"
            android:screenOrientation="portrait"
            android:noHistory="true"/>
        <activity
            android:name=".ResultActivity"
            android:screenOrientation="portrait"
            android:noHistory="true"/>
        <activity
            android:name=".PlayGameActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SettingsActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".AboutActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".GameMenuActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".SplashActivity"
            android:screenOrientation="portrait"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SinglePlayerActivity"
            android:screenOrientation="portrait"
            android:noHistory="true"/>
        <activity
            android:name=".Multiplayer"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".CreateStatementActivity"
            android:screenOrientation="portrait"
            android:noHistory="true"/>
        <activity
            android:name=".EditStatementActivity"
            android:screenOrientation="portrait"
            android:noHistory="true"/>
    </application>

</manifest>